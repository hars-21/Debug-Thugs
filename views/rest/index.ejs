<% layout('/layouts/boilerplate.ejs') %>
<body>
	<h3>All Restaurants</h3>

	<div class="row row-cols-lg-3 row-cols-md-2 row-cols-sm-1">
		<% for(let rest of allRestaurants){ %>
		<a href="/listings/<%= rest._id %>" class="listing-link">
			<div class="card col listing-card">
				<img
					src="<%= rest.image %>"
					class="card-img-top"
					alt="listing_image"
					style="height: 20rem"
				/>
				<div class="card-img-overlay"></div>
				<div class="card-body">
					<p class="card-text">
						<br />
						<b><%= rest.title %></b> <br />
						<b><%= rest.location %></b> <br />
						<%= rest.rating%> <br />
					</p>
				</div>
			</div>
		</a>
		<% } %>
	</div>
</body>
